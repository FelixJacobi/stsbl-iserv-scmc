{% extends '@IServAdmin/page.html.twig' %}

{% block page_title %}
    {{ _('Delete user password') }} - {{ fullname }} - {{ _('User passwords') }} - {{ _('Administration') }}
{% endblock %}

{%block content %}
    <h1>{{ __('Delete user password of %s', fullname) }}</h1>
    <div class="form-actions">
        <a class="btn btn-default" href="{{ path('admin_scmc_userpassword_show', {'id': act}) }}"><span class="glyphicon glyphicon-chevron-left"></span>{{ _('Back to details') }}</a>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <p>{{ __('Do you really want to delete the user password of %s?', fullname) }}</p>
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}