{# src/Stsbl/SchoolCertificateManagerConnectorBundle/Resources/views/Public/block.html.twig #}
{% extends 'base.html.twig' %}

{% set title = _('School certificate management server could not be reached') %}

{% block head %}
<style type="text/css">
body { background-image: url(data:image/png;base64,); }
.error-message {padding: 40px 15px; text-align: center; }
.error-message h1 {font-size: 10em; }
.error-message h2 {margin: 1em 0; }
.error-actions {margin: 2em 0; }
.error-actions .btn { margin: 10px; }
pre {
    text-align: left;
}
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-push-1 col-sm-12 col-xs-12">
            <div class="error-message">
                <h1>503</h1>

                <h2 class="text-uppercase">{{ title }}</h2>

                <p>
                    {{ _('The school certificate management server could not be reached. Please contact your administrator.') }}
                </p>
                <div class="error-actions">
                    <a href="https://{{ config.get('Servername') }}/iserv/" class="btn btn-primary btn-lg">{{ icon('home') }}{{ _('To the IDesk') }}</a>
                </div>
            </div>
        </div>
     </div>
 </div>
{% endblock %}
