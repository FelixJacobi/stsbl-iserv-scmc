{# src/Stsbl/SchoolCertificateManagerConnectorBundle/Reousrces/views/Login/code.html.twig #}
{% extends "IServCoreBundle::page.html.twig" %}

{% block page_title %}
    {{ _('Authorization code') }} - {{ _('Certificate Management') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/compiled/scmc.css' '@StsblSchoolCertificateManagerConnectorBundle/Resources/public/css/scmc.less' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <div id="scmc-login" class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="text-warning">
                            {{ icon('lock') }} {{ _('Certificate Management') }}
                        </span>
                    </h3>
                </div>
                <div class="panel-body">
                    {% if not error is empty %}
                        <div class="alert alert-danger">
                            {{ error }}
                        </div>
                    {% endif %}
                    <form name="form" class="form ng-pristine ng-valid" role="form" action="{{ path('manage_scmc_login') }}" method="post">
                        {{ form_row(form._token) }}
                        <div class="form-group">
                            {{ form_widget(form.code) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.actions) }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}